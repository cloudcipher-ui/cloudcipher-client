<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox prefHeight="400.0" prefWidth="200" alignment="CENTER" spacing="8.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cloudcipher.cloudcipher_client_v2.file.SideFileMenuController">
    <Label fx:id="fileNameLabel" alignment="CENTER" managed="false" textAlignment="CENTER"
           textOverrun="CENTER_WORD_ELLIPSIS" visible="false"/>
    <Label fx:id="fileSizeLabel" alignment="CENTER" layoutX="10.0" layoutY="54.0"
           managed="false" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS"
           visible="false"/>
    <Button fx:id="fileButton" mnemonicParsing="false" onAction="#handleFileButtonClick" prefHeight="25.0"
            prefWidth="146.0" style="-fx-background-radius: 20;" text="Upload New File" textFill="#333333">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>
    <Button fx:id="uploadButton" alignment="CENTER" disable="true" focusTraversable="false" layoutX="37.0"
            layoutY="29.0" managed="false" mnemonicParsing="false" onAction="#handleUploadButtonClick"
            prefHeight="25.0" prefWidth="146.0" style="-fx-background-radius: 20;"
            text="Upload" textAlignment="CENTER" visible="false">
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </Button>

    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="16.0"
          xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:id="createKeyView">
        <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </padding>
        <Label text="You have not set your symmetric key" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS"
               wrapText="true"/>
        <Button mnemonicParsing="false" onAction="#handleGenerateButtonClick" prefHeight="25.0" prefWidth="100.0"
                text="Generate Key"/>
        <Button mnemonicParsing="false" onAction="#handleImportButtonClick" prefHeight="25.0" prefWidth="100.0"
                text="Import Key"/>
    </VBox>
</VBox>
