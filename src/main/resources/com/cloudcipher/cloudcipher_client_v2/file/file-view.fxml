<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.Cursor?>
<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cloudcipher.cloudcipher_client_v2.file.FileController">
    <VBox fx:id="loadingPane" alignment="CENTER" prefHeight="400.0" prefWidth="800.0">
        <ProgressIndicator fx:id="loadingSpinner" prefHeight="84.0" prefWidth="88.0"/>
        <Label fx:id="loadingError" alignment="CENTER" prefHeight="35.0" prefWidth="407.0" text="Label"
               visible="false">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Button fx:id="errorLogoutButton" mnemonicParsing="false" onAction="#handleLogoutButtonClick" prefHeight="25.0" prefWidth="146.0"
                style="-fx-background-radius: 20;" text="Logout" textFill="#333333" visible="false">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
    </VBox>
    <HBox fx:id="contentPane" prefHeight="400.0" prefWidth="800.0">
        <GridPane prefHeight="400.0" prefWidth="600.0"
                  style="-fx-background-color: white; -fx-background-radius: 20 0 0 0; -fx-padding: 0 8;">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="400.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="130.0" minHeight="0.0" prefHeight="30.0" valignment="BOTTOM"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="370.0" minHeight="10.0" prefHeight="370.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <Label alignment="BOTTOM_LEFT" prefHeight="60.0" prefWidth="300.0" text="Name">
                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
            </Label>
            <Label alignment="BOTTOM_LEFT" prefHeight="60.0" prefWidth="100.0" text="Size"
                   GridPane.columnIndex="1">
                <padding>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                </padding>
            </Label>
            <ScrollPane hbarPolicy="NEVER" prefWidth="600.0"
                        style="-fx-background: white; -fx-border-color: white;" GridPane.columnSpan="2147483647"
                        GridPane.rowIndex="1">
                <GridPane fx:id="fileListGrid" style="-fx-background-color: lightgray;" vgap="2.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0"/>
                    </columnConstraints>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </GridPane>
            </ScrollPane>
        </GridPane>
    </HBox>
</AnchorPane>
