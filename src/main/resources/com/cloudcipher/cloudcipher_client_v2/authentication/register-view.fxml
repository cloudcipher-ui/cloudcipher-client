<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cloudcipher.cloudcipher_client_v2.authentication.RegisterController">
    <VBox alignment="CENTER" layoutX="163.0" layoutY="70.0" prefHeight="400.0" prefWidth="450.0"
          spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <TextField fx:id="registerUsername" onAction="#handleRegisterButtonClick" promptText="Username"/>
        <PasswordField fx:id="registerPassword" onAction="#handleRegisterButtonClick"
                       promptText="Password"/>
        <PasswordField fx:id="registerConfirmPassword" layoutX="30.0" layoutY="176.0"
                       onAction="#handleRegisterButtonClick" promptText="Confirm Password"/>
        <Label fx:id="errorLabel" alignment="CENTER" managed="false" prefHeight="17.0" text="Error"
               textAlignment="CENTER" textFill="RED" visible="false"/>
        <ProgressIndicator fx:id="spinner" managed="false" prefHeight="77.0" prefWidth="77.0"
                           visible="false"/>
        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButtonClick"
                text="Register"/>
        <Hyperlink onAction="#handleLoginLinkClick" text="Already have an account?"/>
    </VBox>
</AnchorPane>
